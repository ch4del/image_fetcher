  .button{
  color: #bbbbbbb;;
  width: 200;
  height: 100;
  background: blue;
  position: absolute;
  top: 90%;
  left: 90%;
  border-radius: 30px;
  line-height: 60px;
  margin-left: 5px; 
  vertical-align: top;
}

  /*add any other properties you want to style*/
}
